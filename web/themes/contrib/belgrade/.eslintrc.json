{
  "env": {
    "browser": true,
    "es2021": true,
    "jquery": true,
    "drupal": true
  },
  "extends": ["airbnb-base", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "globals": {
    "Drupal": "readonly",
    "drupalSettings": "readonly",
    "jQuery": "readonly",
    "bootstrap": "readonly"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "no-param-reassign": ["error", { "props": false }],
    "func-names": "off",
    "no-underscore-dangle": "off",
    "prefer-arrow-callback": "off",
    "consistent-return": "off"
  }
}
